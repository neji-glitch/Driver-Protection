<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context=".Home2Activity">

    <Button
        android:id="@+id/decclareacc"
        android:layout_width="148dp"
        android:layout_height="115dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="300dp"

        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/predbut"
        android:layout_width="148dp"
        android:layout_height="115dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="144dp"
        android:background="@android:color/transparent"

        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chatroombut"
        android:layout_width="148dp"
        android:layout_height="115dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="288dp"
        android:background="@android:color/transparent"


        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/diagnosbut"
        android:layout_width="148dp"
        android:layout_height="115dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profilebut"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoff"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="460dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/currentdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="13dp"
        android:background="#00FFFFFF"
        android:text="Current Data"
        app:layout_constraintEnd_toStartOf="@+id/predbut"
        app:layout_constraintStart_toEndOf="@+id/diagnosbut"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>