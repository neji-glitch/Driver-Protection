<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/regbrandformodif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:smsp_baseColor="@color/cardview_dark_background"
        app:smsp_floatingLabelColor="@color/myTextColor"
        app:smsp_highlightColor="@color/colorPrimary"
        app:smsp_hint="Brand"
        app:smsp_hintColor="@color/cardview_shadow_start_color"
        app:smsp_hintTextSize="14sp"
        app:smsp_showEmptyDropdown="true"/>

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/regmodelformofid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:smsp_baseColor="@color/cardview_dark_background"
        app:smsp_floatingLabelColor="@color/myTextColor"
        app:smsp_highlightColor="@color/colorPrimary"
        app:smsp_hint="Model"
        app:smsp_hintColor="@color/cardview_shadow_start_color"
        app:smsp_hintTextSize="14sp"
        app:smsp_showEmptyDropdown="true"/>




</LinearLayout>